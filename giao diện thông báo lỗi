<!DOCTYPE html>
<html lang="vi">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Thông báo lỗi</title>
<style>
  /* Nền mờ khi popup xuất hiện */
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }
  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
    display: none;
    justify-content: center;
    align-items: flex-start;
    z-index: 999;
  }

  /* Popup thông báo lỗi */
  .popup {
    background: #fff0f0;
    border-left: 6px solid #ff4c4c;
    padding: 20px 30px;
    border-radius: 12px;
    margin-top: -200px; /* bắt đầu ở trên */
    min-width: 300px;
    max-width: 400px;
    box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    text-align: center;
    transition: margin-top 0.5s ease;
  }

  .popup.show {
    margin-top: 50px; /* slide xuống */
  }

  .popup h2 {
    color: #b30000;
    margin: 0 0 10px;
    font-size: 20px;
  }

  .popup p {
    margin: 0;
    color: #5a0000;
  }

  .popup button {
    margin-top: 15px;
    padding: 8px 16px;
    background: #ff4c4c;
    color: #fff;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
    transition: background 0.3s;
  }

  .popup button:hover {
    background: #e60000;
  }
</style>
</head>
<body>

<!-- Popup thông báo lỗi -->
<div class="overlay" id="errorOverlay">
  <div class="popup" id="errorPopup">
    <h2>❌ Cập nhật thất bại!</h2>
    <p>Đã xảy ra lỗi khi cập nhật món. Vui lòng thử lại.</p>
    <button onclick="closePopup()">Đóng</button>
  </div>
</div>

<script>
  // Hiển thị popup
  function showPopup() {
    const overlay = document.getElementById('errorOverlay');
    const popup = document.getElementById('errorPopup');
    overlay.style.display = 'flex';
    setTimeout(() => {
      popup.classList.add('show');
    }, 50); // delay nhỏ để hiệu ứng trượt
  }

  // Đóng popup
  function closePopup() {
    const overlay = document.getElementById('errorOverlay');
    const popup = document.getElementById('errorPopup');
    popup.classList.remove('show');
    setTimeout(() => {
      overlay.style.display = 'none';
    }, 500); // thời gian slide lên
  }

  // Tự động hiển thị popup khi load (thử nghiệm)
  window.onload = showPopup;
</script>

</body>
</html>
