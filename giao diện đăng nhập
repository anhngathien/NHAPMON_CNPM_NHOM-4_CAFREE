<body>

<div class="login-box">
    <h2>Đăng nhập CAFREE</h2>

    <div class="input-group">
        <input type="text" id="username" placeholder="Tên đăng nhập">
    </div>

    <div class="input-group">
        <input type="password" id="password" placeholder="Mật khẩu">
    </div>

    <button class="btn-login" onclick="login()">Đăng nhập</button>

    <p class="error-text" id="errorMsg"></p>
</div>

<script>
    function login() {
        const username = document.getElementById("username").value.trim();
        const password = document.getElementById("password").value.trim();
        const errorMsg = document.getElementById("errorMsg");

        // Tài khoản cố định
        const FIXED_USER = "admin";
        const FIXED_PASS = "123456";

        // Không cho rỗng
        if (username === "" || password === "") {
            errorMsg.style.display = "block";
            errorMsg.innerText = "Vui lòng nhập đầy đủ tài khoản và mật khẩu";
            return;
        }

        // Kiểm tra đăng nhập
        if (username === FIXED_USER && password === FIXED_PASS) {
            window.location.href = "danh-sach-ban.html";
        } else {
            errorMsg.style.display = "block";
            errorMsg.innerText = "Sai tên đăng nhập hoặc mật khẩu";
        }
    }
</script>

