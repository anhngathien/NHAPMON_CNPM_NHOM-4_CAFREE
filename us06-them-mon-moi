<script>
    function previewImage(event) {
        const file = event.target.files[0];
        const imgBox = document.getElementById("imgPreview");

        if (file) {
            imgBox.innerHTML = `<img src="${URL.createObjectURL(file)}">`;
        }
    }
</script>

